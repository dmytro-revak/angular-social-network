div(class="ui middle aligned center aligned grid login-wrapper")
    form(class="ui six wide column massive blue form network-form" ng-class="{error: login.isVerificationFailed}" name="signInForm")
        div(class="field")
            label(class="page-form__label") Login
            input(type="text" name="login" placeholder="Login" required ng-model="login.login")
        div(class="field")
            label(class="page-form__label") Password
            input(type="password" name="password" placeholder="Password" required ng-model="login.password")
        button(class="ui big positive button" type="button", ng-click="login.verifyUser(signInForm.$valid)") Sign In
        button(class="ui big secondary button" type="button" ng-click="login.registerUser()") Register
        div(class="ui mini success message")
            p(class="header") You have successfully registered
        div(class="ui mini error message")
            p(class="header") Your login or password is incorrect
            p(class="header") Please try again